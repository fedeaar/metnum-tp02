proc potencia(in A: matriz<n, n>, in q: Nat, in t: Real) {

    q := q / 2
    B := A * A

    v := aleatorio(n)     // un vector aleatorio no nulo
    v := v / norma(v, 2)  // ||v||_2 = 1

    i := 0
    while i < q {

        y := B * v
        y := y / norma(y, 2)
        if (norma(v - y, 2) < t) {  // tolerancia para la convergencia 
            break
        }
        v := y
        i := i + 1
    }

    l := (v.t * A * v) / (v.t * v)  // coeficiente de rayleigh

    return l, v
}
