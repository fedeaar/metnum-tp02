proc potencia(in A: matriz<n, n>, in q: Nat, in t: Real) {

    v := aleatorio(n)     // un vector aleatorio no nulo
    v := v / || v ||      // norma L2

    i := 0
    while i < q / 2 and || z || >= t {

        y := A * (A * v)
        y := y / || y ||
        z := v - y
        v := y
        i := i + 1
    }

    λ := (v.t * A * v) / (v.t * v)  // coeficiente de rayleigh

    return λ, v
}
